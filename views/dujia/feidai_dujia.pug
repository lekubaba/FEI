		meta(name="apple-mobile-web-app-status-bar-style" content="white")
		link(rel="stylesheet" href="http://feidaijun.xiaohongxian.com/tuixiu_profile123.css")
		script(src="http://feidaijun.xiaohongxian.com/remindx.js")
	body
		img.tuixiu_img(src="http://feidaijun.xiaohongxian.com/feidaijun_one123.png")
		div.mass(style="display:none;")
			div.massContent
				div.dujia_title 选择地区并投票
				select(class="city" name="province")
					option(value='选择地区') 选择地区
					option(value='广东') 广东
					option(value='福建') 福建
					option(value='浙江') 浙江
					option(value='江苏') 江苏
					option(value='安徽') 安徽
					option(value='湖北') 湖北
					option(value='湖南') 湖南
					option(value='贵州') 贵州
					option(value='云南') 云南
					option(value='广西') 广西
					option(value='江西') 江西
					option(value='四川') 四川
					option(value='陕西') 陕西
					option(value='甘肃') 甘肃
					option(value='山东') 山东
					option(value='山西') 山西
					option(value='河北') 河北
					option(value='河南') 河南
					option(value='辽宁') 辽宁
					option(value='吉林') 吉林
					option(value='黑龙江') 黑龙江
					option(value='海南') 海南
					option(value='北京') 北京
					option(value='重庆') 重庆
					option(value='天津') 天津
					option(value='上海') 上海
				input.dujia(type='text' placeholder="输入手机号投票")
				div.dujia_button(id="number" data-number=number) 确认投票
			img.clear_dujia(style="margin-top:10px;" src="http://feidaijun.xiaohongxian.com/clear.png")
		div.tuixiu_button
			div.tuixiu_href 我要投票
			a.tuixiu_href2(href="/paiming") 查看投票情况
		script(src="http://feidaijun.xiaohongxian.com/jquery.min.js")
		script(src="http://feidaijun.xiaohongxian.com/dujia_js.js")
