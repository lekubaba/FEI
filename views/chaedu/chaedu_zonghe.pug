		div.qrcode_zs(style="display:none;")
			div.qrcode_zs_b
				div(id="qrcode")
			img.clear_a(style="margin-top:10px;" src="http://feidaijun.xiaohongxian.com/clear.png")
		div.qrcode_sq(style="display:none;")
			div.qrcode_tg_b
				div(id="qrcode_t")
			img.clear_t(style="margin-top:10px;" src="http://feidaijun.xiaohongxian.com/clear.png")
